<% include ../partial/header %>
<div class = "container">
	<div class = "row">
		<h1 style = "text-align: center;"> Create a new CampGround!</h1>
		<div style = "width: 30%; margin : 25px auto;">
			<form method="POST" action="/campgrounds" enctype="multipart/form-data">
				<div class = "form-group">
					<label for="campground_name">Campground Name</label>
					<input type="text" name="campground[name]" id="campground_name" class= "form-control" placeholder = "Campground Name">
				</div>
				<div class = "form-group">
					<label for="campground_price">Campground Price</label>
					<input type="number" name="campground[price]" id="campground_price" class= "form-control" placeholder = "Campground Price" min = "0.01" step="0.01">
				</div>
				<div class="form-group">
                    <label for="image">Image</label>
                    <input type="file" id="campground_image" name="campground[image]" accept="image/*" required>
                </div>
				<div class= "form-group">
					<label for="campground_location">Campground Location</label>
					<input type="text" name="campground[location]" id="campground_location" class = "form-control" placeholder = "Campsites Location">
				</div>
				<div class= "form-group">
					<label for="campground_location_iframe">Campground Location(iFrame)</label>
					<input type="text" name="campground[locationIframe]" id="campground_location_iframe" class = "form-control" placeholder = "Campsites Location(Iframe)">
					<small id="iframeHelp" class="form-text text-muted">Optional.</small>
				</div>
				<div class = "form-group">
						<label for="campground_phoneNumber">Campground Phone Number</label>
						<input type="number" name="campground[phoneNumber]" id="campground_phoneNumber" class= "form-control" placeholder = "081289503000">
					</div>
				<div class= "form-group">
					<input type="text" name="campground[description]" id="campground_description" class = "form-control" placeholder = "Campground description">
				</div>
				<div class = "form-group">
					<input type="submit" name="" class="btn btn-lg btn-primary btn-block">
				</div>
			</form>
		</div>
	</div>
</div>
<% include ../partial/footer %>