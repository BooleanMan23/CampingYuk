<% include ../partial/header %>
<div class = "container">
	<div class = "row">
		<h1 style = "text-align: center;"> Create a new CampGround!</h1>
		<div style = "width: 30%; margin : 25px auto;">
			<form method="POST" action="/campgrounds">
				<div class = "form-group">
					<input type="text" name="campground_name" id="campground_name" class= "form-control" placeholder = "Campground Name">
				</div>
				<div class = "form-group">
					<input type="number" name="campground_price" id="campground_price" class= "form-control" placeholder = "Campground Price" min = "0.01" step="0.01">
				</div>
				<div class= "form-group">
					<input type="text" name="campground_image" id="campground_image" class = "form-control" placeholder = "Campground Image Source">
				</div>
				<div class= "form-group">
					<input type="text" name="campground_description" id="campground_description" class = "form-control" placeholder = "Campground description">
				</div>
				<div class = "form-group">
					<input type="submit" name="" class="btn btn-lg btn-primary btn-block">
				</div>
			</form>
		</div>
	</div>
</div>
<% include ../partial/footer %>