<% include ../partial/header %>
<div class = "container">
	<div class = "row">
		<h1 style = "text-align: center;"> Edit <%= campground.name%></h1>
		<div style = "width: 30%; margin : 25px auto;">
			<form method="POST" action="/campgrounds/<%=campground._id%>?_method=PUT">
				<div class = "form-group">
					<input type="text" name="campground[name]" id="campground_name" class= "form-control" value = "<%=campground.name%>">
				</div>
				<div class = "form-group">
					<input type="number" name="campground[price]" id="campground_price" class= "form-control" value = "<%=campground.price%>" min = "0.01" step="0.01">
				</div>
				<div class= "form-group">
					<input type="text" name="campground[image]" id="campground_image" class = "form-control" value = "<%= campground.image%>">
				</div>
				<div class= "form-group">
					<input type="text" name="campground[description]" id="campground_description" class = "form-control" value = "<%=campground.description%>">
				</div>
				<div class = "form-group">
					<input type="submit" name="" class="btn btn-lg btn-primary btn-block">
				</div>
			</form>
		</div>
	</div>
</div>
<% include ../partial/footer %>