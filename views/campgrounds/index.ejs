<% include ../partial/header %>


<div class= "container">
   <header class = "jumbotron">
      <div class = "container"> 
         <h1> Welcome To YelpCamp</h1>
         <p> View our hand-picked campgrounds from all over the world</p>
         <a href="/campgrounds/new" class="btn btn-primary btn-lg">Add a new Campgrounds</a>
     </div>
   </header>
   
   <div class= "row" style="display:flex; flex-wrap: wrap; ">
      <% for(var i = 0; i<campSites.length; i++){ %> 
         <div class = "col-md-3 col-sm-6">
            <div class = "thumbnail">
            
               <img src=" <%=campSites[i].image %> ">
               <div class = "caption">
                     <h4>	<%=  campSites[i].name   %> </h4>
               </div>
               <p>
                  <a href="/campgrounds/<%= campSites[i]._id %>" class = "btn btn-primary">More Info </a>
               </p>
            </div>
         </div>
      <% }; %>
           
   </div>
  
   
</div>

<% include ../partial/footer %>

